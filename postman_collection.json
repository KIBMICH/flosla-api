{
  "info": {
    "name": "Event Payment System",
    "description": "API collection for Event Payment System with Paystack integration",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/api"
    },
    {
      "key": "token",
      "value": ""
    },
    {
      "key": "eventId",
      "value": ""
    },
    {
      "key": "registrationId",
      "value": ""
    },
    {
      "key": "reference",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Public",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "url": "http://localhost:3000/health"
          }
        },
        {
          "name": "Get Active Events",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/events"
          }
        },
        {
          "name": "Get Event by ID",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/events/{{eventId}}"
          }
        },
        {
          "name": "Register for Event",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.data) {",
                  "    pm.collectionVariables.set('registrationId', jsonData.data.registrationId);",
                  "    pm.collectionVariables.set('reference', jsonData.data.reference);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/events/{{eventId}}/register",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fullName\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"phone\": \"08012345678\"\n}"
            }
          }
        },
        {
          "name": "Initialize Payment",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/payments/initialize",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"registrationId\": \"{{registrationId}}\",\n  \"reference\": \"{{reference}}\"\n}"
            }
          }
        },
        {
          "name": "Get Receipt",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/receipts/{{reference}}"
          }
        },
        {
          "name": "Verify Receipt",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/receipts/verify/{{reference}}"
          }
        }
      ]
    },
    {
      "name": "Admin",
      "item": [
        {
          "name": "Admin Register",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.data && jsonData.data.token) {",
                  "    pm.collectionVariables.set('token', jsonData.data.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/admin/register",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@event.com\",\n  \"password\": \"admin123\"\n}"
            }
          }
        },
        {
          "name": "Admin Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.data && jsonData.data.token) {",
                  "    pm.collectionVariables.set('token', jsonData.data.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/admin/login",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@event.com\",\n  \"password\": \"admin123\"\n}"
            }
          }
        },
        {
          "name": "Create Event",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.data && jsonData.data._id) {",
                  "    pm.collectionVariables.set('eventId', jsonData.data._id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/admin/events",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Tech Conference 2026\",\n  \"description\": \"Annual technology conference\",\n  \"amount\": 500000\n}"
            }
          }
        },
        {
          "name": "Get All Registrations",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/admin/registrations?page=1&limit=20",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "registrations"],
              "query": [
                { "key": "page", "value": "1" },
                { "key": "limit", "value": "20" },
                { "key": "eventId", "value": "{{eventId}}", "disabled": true },
                { "key": "status", "value": "PAID", "disabled": true }
              ]
            },
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ]
          }
        },
        {
          "name": "Get Registration by ID",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/admin/registrations/{{registrationId}}",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ]
          }
        },
        {
          "name": "Get All Payments",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/admin/payments?page=1&limit=20",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "payments"],
              "query": [
                { "key": "page", "value": "1" },
                { "key": "limit", "value": "20" }
              ]
            },
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ]
          }
        },
        {
          "name": "Export Records (CSV)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/admin/export",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "export"],
              "query": [
                { "key": "eventId", "value": "{{eventId}}", "disabled": true }
              ]
            },
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ]
          }
        }
      ]
    },
    {
      "name": "Webhook (Testing)",
      "item": [
        {
          "name": "Simulate Paystack Webhook",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/payments/webhook",
            "description": "Note: This won't work without valid Paystack signature. Use for reference only.",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "x-paystack-signature",
                "value": "YOUR_SIGNATURE_HERE"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"event\": \"charge.success\",\n  \"data\": {\n    \"reference\": \"{{reference}}\",\n    \"amount\": 500000,\n    \"currency\": \"NGN\",\n    \"channel\": \"card\",\n    \"paid_at\": \"2026-01-15T10:00:00.000Z\"\n  }\n}"
            }
          }
        }
      ]
    }
  ]
}
